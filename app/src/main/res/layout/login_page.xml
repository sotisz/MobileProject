<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wanderlust"
        android:layout_marginTop="50dp"
        android:padding="72dp"
        android:textSize="20pt"
        android:background="#AAF8B8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/LoginIdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ID: "
        android:textSize="12pt"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toBottomOf="@id/titleName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/LoginIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginRight="40dp"
        android:ems="12"
        app:layout_constraintTop_toBottomOf="@id/titleName"
        app:layout_constraintLeft_toRightOf="@+id/LoginIdName"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/LoginPwName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pw: "
        android:textSize="12pt"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@id/LoginIdName"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/LoginPwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginRight="40dp"
        android:ems="12"
        app:layout_constraintTop_toBottomOf="@id/LoginIdText"
        app:layout_constraintLeft_toRightOf="@+id/LoginPwName"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@+id/LoginPwText"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/SignUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게정이 없다면 회원 가입하세요."
        android:layout_marginTop="100dp"
        android:textColor="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/LoginPwText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊버렸다면 비밀번호 찾기"
        android:layout_marginTop="20dp"
        android:textColor="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/SignUP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>